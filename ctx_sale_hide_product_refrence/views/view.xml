<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hide_cancel_button_view" model="ir.ui.view">
        <field name="name">hide.cancel.button.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_cancel'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='button_cancel'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>





</odoo>